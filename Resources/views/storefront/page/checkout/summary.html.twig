{% sw_extends '@Storefront/storefront/page/checkout/summary.html.twig' %}

{% block page_checkout_summary_position_label %}
    <dt class="col-7 checkout-aside-summary-label">
        {{ "showroom.checkout.summaryPositionPrice"|trans|sw_sanitize }}
    </dt>
{% endblock %}

{% block page_checkout_summary_total_label %}
    <dt class="col-7 checkout-aside-summary-label checkout-aside-summary-total">
        {{ "showroom.checkout.summaryTotalPrice"|trans|sw_sanitize }}
    </dt>
{% endblock %}

{% block page_checkout_summary_net_label %}
    <dt class="col-7 checkout-aside-summary-label checkout-aside-summary-net">
        {{ parent() }}
    </dt>
{% endblock %}

{% block page_checkout_summary_tax_label %}
    <dt class="col-7 checkout-aside-summary-label">
        {{ "showroom.checkout.summaryTax"|trans({
            '%rate%': taxItem.taxRate
        })|sw_sanitize }}
    </dt>
{% endblock %}
