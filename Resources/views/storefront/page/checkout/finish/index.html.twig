{% sw_extends '@Storefront/storefront/page/checkout/finish/index.html.twig' %}

{% block page_checkout_finish %}
    {% block page_checkout_finish_details %}
        {% sw_include '@Storefront/storefront/page/checkout/finish/finish-details.html.twig' %}
    {% endblock %}

    {% block page_checkout_additional_main %}
        {% if page.order.customerComment %}
            {{ block('page_checkout_finish_customer_comment_header') }}

            {{ block('page_checkout_finish_customer_comment_content') }}
        {% endif %}
    {% endblock %}
{% endblock %}

{% block page_checkout_aside_container %}
    <div class="checkout-aside-container">
        {% block page_checkout_cart_header %}
            <h2 class="finish-product-header">
                {{ "showroom.checkout.finishCartHeader"|trans|sw_sanitize }}
            </h2>
        {% endblock %}

        {% block page_checkout_finish_product_table %}
            {{ parent() }}
        {% endblock %}

        <div class="row">
            <div class="col-12 col-lg-5 offset-lg-7">
                {% block page_checkout_aside_summary %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block page_checkout_additional %}
{% endblock %}
