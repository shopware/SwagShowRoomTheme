{% sw_extends '@Storefront/storefront/component/product/card/box-standard.html.twig' %}

{% block component_product_box %}
    {% if product %}
        <div class="product-overlay shadow rounded">
            <div class="product-overlay__content">
                <div class="product-overview">
                    {% block component_product_box_rating %}
                        {{ parent() }}
                    {% endblock %}

                    {% block component_product_box_name %}
                        {{ parent() }}
                    {% endblock %}

                    {% block component_product_box_description %}
                        {{ parent() }}
                    {% endblock %}

                    {% block component_product_box_variant_characteristics %}
                        {{ parent() }}
                    {% endblock %}
                </div>

                {% block component_product_box_price %}
                    {{ parent() }}
                {% endblock %}
            </div>

            <div class="product-overlay__action{% if config('core.cart.wishlistEnabled') %} wishlist{% endif %}">
                <hr>
                {% block component_product_box_price_unit %}
                    {% if not product.extensions.subscription_data.subscribable %}
                        {% sw_include '@Storefront/storefront/component/product/card/box-price-unit.html.twig' %}
                    {% endif %}
                {% endblock %}

                {% block component_product_box_action %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </div>
    {% endif %}
{% endblock %}
