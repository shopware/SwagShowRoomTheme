{% sw_extends '@Storefront/storefront/component/product/card/badges.html.twig' %}

{% block component_product_badges %}
    <div class="product-badges">
        {% block component_product_badges_new %}
            {% if product.isNew %}
                <div>
                    <span class="badge {{ bgClass }}-primary badge-new">{{ "listing.boxLabelNew"|trans|sw_sanitize }}</span>
                </div>
            {% endif %}
        {% endblock %}

        {% block component_product_badges_topseller %}
            {% if product.markAsTopseller %}
                <div>
                    <span class="badge {{ bgClass }}-primary badge-topseller">{{ "listing.boxLabelTopseller"|trans|sw_sanitize }}</span>
                </div>
            {% endif %}
        {% endblock %}

        {% block component_product_badges_discount %}
            {{ parent() }}
        {% endblock %}
    </div>
{% endblock %}
