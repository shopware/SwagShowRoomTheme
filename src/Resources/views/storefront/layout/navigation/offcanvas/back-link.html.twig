<div class="navigation-offcanvas-back-link">
    <a class="nav-item nav-link is-back-link navigation-offcanvas-link js-navigation-offcanvas-link"
       href="{{ path('frontend.menu.offcanvas', { 'navigationId': item.parentId}) }}"
       itemprop="url"
       title="{{ "general.back"|trans|striptags }}">
        {% block layout_navigation_offcanvas_navigation_category_back_link_text %}
            <span class="navigation-offcanvas-link-icon js-navigation-offcanvas-loading-icon">
                {% sw_icon 'arrow-medium-left' style { 'pack': 'solid' } %}
            </span>

            <span itemprop="name">
                {{ "general.back"|trans|sw_sanitize }}
            </span>
        {% endblock %}
    </a>
    <a class="nav-item nav-link navigation-offcanvas-link navigation-offcanvas-headline"
       href="{{ seoUrl('frontend.navigation.page', { 'navigationId': item.parentId}) }}"
       itemprop="url">
        {% block layout_navigation_offcanvas_navigation_category_headline_text %}
            <span itemprop="name">
                {{ item.translated.name }}
            </span>
        {% endblock %}
    </a>
</div>
